<div class="article text-center">
  <h1><%= @article.title %></h1>
  <hr class="border-bottom border-dark" style="width: fit-content;">
  <p><%= @article.content %></p>
</div>

<div class="text-center">
  <%= link_to 'Back to wikimous', articles_path, class: 'btn btn-primary me-2' %>
  <%= link_to 'Edit', edit_article_path(@article), class: 'btn btn-warning' %>
  <%= link_to 'Delete', article_path(@article), class: 'btn btn-danger', data: { turbo_method: :delete, turbo_confirm: 'Delete this article?' } %>
</div>
