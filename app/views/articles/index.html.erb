  <div class="navbar-brand">
    <h1 class="text-center m-0">Articles</h1>
  </div>
  <%= link_to 'New Article', new_article_path, class: 'btn btn-primary' %>
  <hr class="w-100 border-bottom border-dark position-absolute bottom-0">
